<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="Create Event"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/post_view_location"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/create_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:hint="Location"
            android:paddingLeft="8dp"
            android:background="@drawable/textbox_shape"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/post_view_description"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/create_description"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:hint="Description"
            android:paddingLeft="8dp"
            android:background="@drawable/textbox_shape"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/post_view_date"
            android:layout_weight="1"/>
        <EditText
            android:inputType="date"
            android:id="@+id/create_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:hint="Date"
            android:paddingLeft="8dp"
            android:background="@drawable/textbox_shape"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/post_view_sport"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/create_sport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:hint="Sport"
            android:paddingLeft="8dp"
            android:background="@drawable/textbox_shape"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/button_submit"
        android:layout_marginTop="55dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:clickable="true"
        android:layout_gravity="center"
        android:foreground="?attr/selectableItemBackground"
        android:src="@mipmap/post_view_join"/>
</LinearLayout>